export component TopBar inherits Rectangle {
    callback close_requested();

    height: 36px;
    background: #181818;
    border-width: 1px;
    border-color: #303030;

    HorizontalLayout {
        padding: 8px;
        spacing: 8px;

        Text {
            text: "Sample Sources";
            color: #e0e0e0;
            vertical-alignment: center;
        }

        Rectangle {
            height: 1px;
            horizontal-stretch: 1;
            background: #00000000;
        }

        Rectangle {
            width: 28px;
            height: parent.height - 8px;
            background: #2a2a2a;
            border-width: 1px;
            border-color: #404040;
            border-radius: 4px;

            Text {
                text: "X";
                horizontal-alignment: center;
                vertical-alignment: center;
                color: #e0e0e0;
                width: parent.width;
                height: parent.height;
            }

            TouchArea {
                width: parent.width;
                height: parent.height;
                clicked => { root.close_requested(); }
            }
        }
    }
}
